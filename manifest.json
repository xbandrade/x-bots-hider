{
    "manifest_version": 3,
    "name": "X Bots Hider",
    "version": "0.1",
    "description": "Hide bots and irrelevant comments from Twitter/X posts",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
  
    },
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation"
    ],
    "icons": {
        "48": "icon.png"
    },  
    "content_scripts": [
        {
            "matches": [
            "https://twitter.com/*",
            "https://x.com/*"
            ],
            "js": ["content.js"]
        }
    ]
}
